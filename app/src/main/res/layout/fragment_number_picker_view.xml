<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.jaylen.customviewsdemo.numberPickerView.NumberPickerView
        android:id="@+id/number_picker_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:npv_TextSizeNormal="24dp"
        app:npv_TextSizeSelected="30dp"
        app:npv_TextColorSelected="@color/mBlack"
        app:npv_TextColorHint="@color/mDarkGray"
        app:npv_DividerColor="@color/mDarkGray"/>

</LinearLayout>